<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_login_bg"
    tools:context=".SetupActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/setup_profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/profile"
            android:layout_gravity="center"
            >
        </de.hdodenhof.circleimageview.CircleImageView>

        <EditText
            android:id="@+id/setup_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/inputs"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Roll No"
            android:inputType="textPersonName"
            android:padding="14dp" />

        <EditText
            android:id="@+id/setup_fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/inputs"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/student_name"
            android:inputType="textPersonName"
            android:padding="14dp" />

        <EditText
            android:id="@+id/setup_country_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/inputs"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Surname"
            android:inputType="textPersonName"
            android:padding="14dp" />

        <EditText
            android:id="@+id/Department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/inputs"
            android:ems="10"
            android:gravity="start|top"
            android:text="@string/computer_science"
            android:inputType="textPersonName"
            android:drawableLeft="@drawable/ic_business_black_24dp"
            android:padding="14dp" />

        <EditText
            android:id="@+id/Batch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/inputs"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Batch"
            android:inputType="textPersonName"
            android:padding="14dp" />

        <EditText
            android:id="@+id/semester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/inputs"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Semester"
            android:inputType="textPersonName"
            android:padding="14dp" />
        <EditText
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/inputs"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Year"
            android:inputType="textPersonName"
            android:padding="14dp" />

        <Button
            android:id="@+id/setup_information_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:drawableLeft="@drawable/ic_save_black_24dp"
            android:padding="14dp"
            android:text="Save"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </LinearLayout>
</ScrollView>